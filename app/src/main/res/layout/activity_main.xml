<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/login_layout">

    <EditText
        android:id="@+id/username"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:layout_marginTop="105dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:gravity="center"
        android:hint="username"
        android:paddingLeft="5dp"
        android:drawableLeft="@drawable/baseline_account_box_24"
        android:textSize="15sp"
        android:textColorHint="@color/teal_700"
        android:textColor="@color/teal_700"
        android:background="@drawable/border_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.326" />

    <EditText
        android:id="@+id/password"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:textSize="15sp"
        android:textColorHint="@color/teal_700"
        android:textColor="@color/teal_700"
        android:background="@drawable/border_shape"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:padding="5dp"
        android:inputType="textPassword"
        android:gravity="center"
        android:hint="password"

        android:drawableLeft="@drawable/baseline_key_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username"
        app:layout_constraintVertical_bias="0.045" />

    <Button
        android:id="@+id/login"
        android:layout_width="76dp"
        android:layout_height='48dp'
        android:layout_marginStart="124dp"
        android:background="@drawable/border_shape"
        android:text="giriş"
        android:textAllCaps="false"
        android:onClick="sql_prog"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password"
        app:layout_constraintVertical_bias="0.039" />

    <Button
        android:id="@+id/sign_up"
        android:layout_width="76dp"
        android:layout_height='48dp'
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:onClick="sql_prog"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toEndOf="@+id/login"
        android:text="kayıt"
        android:textAllCaps="false"
        android:background="@drawable/border_shape"
        app:layout_constraintTop_toBottomOf="@+id/password"
        app:layout_constraintVertical_bias="0.04" />


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="120dp"
        android:layout_height="120dp"

        android:layout_marginTop="92dp"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/instagram_167_svgrepo_com" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/border_shape"
        android:layout_marginTop="590dp"


        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableRight="@drawable/emoji_sad_500_svgrepo_com"
            android:gravity="center"
            android:paddingRight="15dp"
            android:text="powered by " />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>